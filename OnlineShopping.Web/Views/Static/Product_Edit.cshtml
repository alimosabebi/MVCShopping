    <h2>Product</h2>
    <form name="theForm">
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            <div class="form-group">
                <label for="Name" class = "control-label col-md-2"> Name </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Name" id="Name"  class="form-control"/>
                    <div id="validation_for_Name"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Description" class = "control-label col-md-2"> Description </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Description" id="Description"  class="form-control"/>
                    <div id="validation_for_Description"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Price" class = "control-label col-md-2"> Price </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Price" id="Price"  class="form-control"/>
                    <div id="validation_for_Price"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Category" class = "control-label col-md-2"> Category </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Category" id="Category"  class="form-control"/>
                    <div id="validation_for_Category"></div>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    </form>
    
    <div>
        <a href="#/Product">Back to List</a>
    </div>
