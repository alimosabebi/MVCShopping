    <h2>Product</h2>
    <p>
        <a href="#/Product/Create">Create New</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="item in data">
            <td>
                {{ item.Name }}
            </td>
            <td>
                {{ item.Description }}
            </td>
            <td>
                {{ item.Price }}
            </td>
            <td>
                {{ item.Category }}
            </td>
            <td>
                <a ng-href="#/Product/Edit/{{item.ProductId}}">Edit</a> |
                <a ng-href="#/Product/{{item.ProductId}}">Details</a> |
                <a ng-href="#/Product/Delete/{{item.ProductId}}">Delete</a>
            </td>
        </tr>
        </tbody>
    
    </table>
